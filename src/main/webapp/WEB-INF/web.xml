<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>FoodOrderingController</servlet-name>
    <servlet-class>kz.epam.tcfp.foodordering.controller.FoodOrderingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FoodOrderingController</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>kz.epam.tcfp.foodordering.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>type</param-name>
      <param-value>text/html;charset=UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>PageRedirectSecurityFilter</filter-name>
    <filter-class>kz.epam.tcfp.foodordering.filter.PageRedirectSecurityFilter</filter-class>
    <init-param>
      <param-name>path</param-name>
      <param-value>/index.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>PageRedirectSecurityFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>
<!--  <filter>-->
<!--    <filter-name>ServletSecurityFilter</filter-name>-->
<!--    <filter-class>kz.epam.tcfp.foodordering.filter.ServletSecurityFilter</filter-class>-->
<!--  </filter>-->
<!--  <filter-mapping>-->
<!--    <filter-name>ServletSecurityFilter</filter-name>-->
<!--    <url-pattern>/jsp/*</url-pattern>-->
<!--  </filter-mapping>-->
  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/jsp/error/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/jsp/error/error.jsp</location>
  </error-page>
</web-app>
